<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemnamef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Item Name"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pricef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemnamef"
            android:layout_marginLeft="5dp"
            android:text="price"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/plusf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/plus" />

        <NumberPicker
            android:id="@+id/countf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/plusf">

        </NumberPicker>

        <Button
            android:id="@+id/minusf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/countf"
            android:background="@drawable/minus" />


        <Button
            android:id="@+id/favouritef"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/pricef"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/favorite_heart_button1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>